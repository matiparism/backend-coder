<style>
  li {
    border: 1px solid #ccc;
    padding: 0.4em;
    border-radius: 0.4em;
    background-color: #f9f9f9;
  }
</style>
<div>
  <h3>Lista de carritos</h3>
  <div id="carts-list"></div>
  <div>
    {{#each carts}}
    <li>
      <ul>ID Carrito: {{this.cid}}</ul>
      <ul>Productos:</ul>
      {{#each this.products}}
        <ul>Producto: {{this.id}}</ul>
        <ul>Cantidad: {{this.quantity}}</ul>
      {{/each}}
    </li>
    {{/each}}
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script type="module" src="/js/realTimeCarts.js"></script>

</div>